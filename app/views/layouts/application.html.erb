<!DOCTYPE html>
<html>
  <head>
    <title>PickUp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('logo.png') %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> 

    <script src="https://kit.fontawesome.com/64b8b4bea1.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: "layouts/users_header" %>
    <div class="wrapper">
      <%= render partial: 'shared/flash_message' %>
      <%= yield %>
      <footer class="center">
        <%= render partial: "layouts/footer" %>
      </footer>
      <%= render partial: 'users/auth_modal' %>
    </div>

    <% if user_signed_in? %>
      <%= render partial: 'users/modal' %>
    <% end %>
    <%= render partial: 'layouts/user_menu_modal' %>
    
  </body>
</html>
