<!DOCTYPE html>
<html>
  <head>
    <title>PickUp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('logo.png') %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> 
    <script src="https://kit.fontawesome.com/64b8b4bea1.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="overlay">
      <div class="cv-spinner">
        <span class="spinner"></span>
      </div>
    </div>
    <header>
      <%= render partial: 'layouts/shop_header' %>
    </header>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-2" style="padding:0;">
          <div class="sidebar">
            <%= render partial: 'layouts/shopSidebar' %>
            <%= render partial: 'layouts/adminSidebar' %>
          </div>
        </div>
        <div class="col-lg-10 mainBox" style="padding:0;">
          <div class="wrapper">
            <%= render partial: 'shared/flash_message' %>
            <%= yield %>
            <footer class="center">
              <%= render partial: "layouts/footer" %>
            </footer>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>