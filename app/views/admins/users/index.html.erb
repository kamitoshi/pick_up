<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="content_box">
        <h5>ユーザー一覧</h5>
        <div class="content_box_detail">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>氏名</th>
                <th>電話番号</th>
                <th>メールアドレス</th>
                <th>利用回数</th>
              </tr>
            </thead>
            <tbody>
              <% if @users.present? %>
                <% @users.each do |user| %>
                  <tr class="pointer" data-href="<%= admins_user_path(user) %>">
                    <td><%= user.id %></td>
                    <td><%= user.full_name %></td>
                    <td><%= user.phone_number %></td>
                    <td><%= user.email %></td>
                    <td><%= user.orders.count %>回</td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td>
                    登録ユーザーがいません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row center ma-b-20">
    <div class="col-md-12">
      <%= paginate @users %>
    </div>
  </div>
</div>