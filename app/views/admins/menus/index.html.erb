<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="content_box">
        <h5>メニュー一覧</h5>
        <div class="content_box_detail">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>商品名</th>
                <th>出品店舗</th>
                <th>価格</th>
                <th>タイプ</th>
              </tr>
            </thead>
            <tbody>
              <% if @menus.present? %>
                <% @menus.each do |menu| %>
                  <tr class="pointer" data-href="<%= shops_menu_path(menu) %>">
                    <td><%= menu.name %></td>
                    <td><%= menu.shop.name %></td>
                    <td>¥<%= menu.price %></td>
                    <td><%= menu.menu_type %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan=5>
                    登録されたメニューがありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row center ma-b-20">
    <div class="col-md-12">
      <%= paginate @menus %>
    </div>
  </div>
</div>