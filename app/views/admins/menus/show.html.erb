<div class="container-fluid" style="background-color:#eee">
  <div class="row">
    <div class="col-8">
      <div class="width_box">
        <h5>メニュー詳細</h5>
        <hr>
        <div class="content_box_detail">
          <div class="image_box">
            <% if @menu.menu_images.present? %>
              <div class="menu_image-box center ma-b-10">
                <%= image_tag @menu.menu_images[0].file_name.url, class:"wid-50" %>
              </div>
              <div class="menu_image-box center">
                <% @menu.menu_images.each do |image| %>
                  <%= image_tag image.file_name.thumb100.to_s %>
                <% end %>
              </div>
            <% end %>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th width="30%">商品名</th>
                <td><%= @menu.name %></td>
              </tr>
              <tr>
                <th>価格</th>
                <td><%= @menu.price %></td>
              </tr>
              <tr>
                <th>セール価格</th>
                <td><%= @menu.special_price %></td>
              </tr>
              <tr>
                <th>手数料</th>
                <td><%= @menu.fee %></td>
              </tr>
              <tr>
                <th>セール状態</th>
                <td>
                  <% if @menu.is_saling? %>
                    キャンペーン中
                  <% else %>
                    通常販売
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>販売状態</th>
                <td>
                  <% if @menu.is_active? %>
                    販売中
                  <% else %>
                    販売停止中
                  <% end %>
                </td>
              </tr>
              <tr>
                <th>商品紹介文</th>
                <td><%= @menu.introduction %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="return_btn center">
          <%= link_to "一覧へ", admins_menus_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="width_box">
        <div class="edit_btn center">
          <%= link_to "編集する", edit_menu_path(@menu.id), class: "btn btn-outline-success" %>
        </div>
        <div class="add_btn center">
          <%= link_to "商品画像を追加する", new_menu_menu_image_path(@menu.id), class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>