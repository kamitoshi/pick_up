<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="form_box">
        <h3 class="center">『<%= @menu.name %>』編集</h3>
        <hr>
        <%= form_for @menu do |f| %>
          <div class="field ma-b-50">
            <%= f.label :name, "商品名" %><br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
          </div>

          <div class="field ma-b-50">
            <%= f.label :menu_type, "商品タイプ" %><br />
            <%= f.select :menu_type, Menu.menu_types.keys, {include_blank: "選択してください"}, {class: "custom-select"} %>
          </div>

          <div class="field ma-b-50">
            <%= f.label :genre, "商品ジャンル" %><br />
            <%= f.select :genre, Menu.genres.keys, {include_blank: "選択してください"}, {class: "custom-select"} %>
          </div>

          <div class="field ma-b-50">
            <%= f.label :price, "価格" %><br />
            <%= f.number_field :price, autofocus: true, autocomplete: "price", class:"form-control" %>
          </div>

          <div class="field ma-b-50">
            <%= f.label :fee, "手数料（％）" %><br />
            <%= f.number_field :fee, autofocus: true, autocomplete: "fee", class:"form-control", placeholder: "例:10" %>
          </div>


          <div class="field ma-b-50">
            <%= f.label :introduction, "商品紹介文" %><br />
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class:"form-control" %>
          </div>

          <div class="actions center">
            <%= f.submit "編集", class: "button-fill" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>