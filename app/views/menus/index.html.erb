<div class="container-fluid" style="background-color:#eee">
  <div class="row">
    <div class="col-12">
      <div class="width_box">
        <h5>メニュー一覧</h5>
        <div class="content_box_detail">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>商品名</th>
                <th>価格</th>
                <th>登録店舗</th>
                <th width="20%"></th>
              </tr>
            </thead>
            <tbody>
              <% if @menus.present? %>
                <% @menus.each do |menu| %>
                  <tr class="pointer" data-href="<%= menu_path(menu) %>">
                    <td><%= menu.name %></td>
                    <td>¥<%= menu.price %></td>
                    <td><%= menu.shop.name %></td>
                    <td>
                      <% if current_user.cart_already_include(menu) %>
                        <%= link_to "カートに追加する", "#", method: :patch, class: "btn btn-warning" %>
                      <% else %>
                        <%= link_to "カートに入れる", menu_cart_items_path(menu), method: :post, class: "btn btn-danger" %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td>
                    登録されたメニューがありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>