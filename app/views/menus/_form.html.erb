<%= form_for menu do |f| %>
  <div class="field ma-b-50">
    <%= f.label :name, "商品名" %><br>
    <%= f.text_field :name, autocomplete: "name", class:"form-under", placeholder: "商品名を入力してください" %>
  </div>

  <div class="field ma-b-50">
    <%= f.label :menu_type, "商品タイプ" %><br />
    <%= f.select :menu_type, Menu.menu_types.keys, {include_blank: "選択してください"}, {class: "custom-select"} %>
  </div>

  <div class="field ma-b-50">
    <%= f.label :price, "価格" %><br />
    <%= f.number_field :price, autocomplete: "price", class:"form-under", placeholder: "商品の価格を入力してください" %>
  </div>

  <div class="field ma-b-50">
    <%= f.label :fee, "手数料（％）" %><span class="font-10">※商品が売れた時の販売手数料です</span><br />
    <%= f.number_field :fee, autocomplete: "fee", class:"form-under", placeholder: "販売手数料を入力してください" %>
  </div>

  <div class="field ma-b-50">
    <%= f.label :estimated_time, '完成までの目安時間' %>
    <%= f.select :estimated_time, {'5分': 5, '10分': 10, '15分': 15, '20分': 20, '25分': 25, '30分': 30, '40分': 40, '50分': 50, '60分': 60}, { include_blank: '選択してください'}, {class: "custom-select"} %>
  </div>

  <div class="field ma-b-50">
    <%= f.label :introduction, "商品紹介文" %><br />
    <%= f.text_area :introduction, autocomplete: "introduction", class:"form-control", placeholder: "商品の紹介文を記入してください", style: "height:200px" %>
  </div>
  
  <% if admin_signed_in? %>
    <div class="field ma-b-50">
      <%= f.label :shop_id, "登録店舗" %><br />
      <%= f.collection_select :shop_id, @shops, :id, :name, include_blank: true %>
    </div>
  <% end %>
  <div class="actions center">
    <%= f.submit btn, class: "button-fill" %>
  </div>
<% end %>