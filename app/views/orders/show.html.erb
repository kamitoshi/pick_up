<div class="container-fluid head-pad">
  <div class="row">
    <div class="col-lg-12">
      <div class="width_box">
        <h5>注文履歴詳細</h5>
        <hr>
        <div class="content_box_detail">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>予約店舗</th>
                <td colspan=3><%= @order.shop.name %></td>
              </tr>
              <tr>
                <th>予約番号</th>
                <td colspan=3><%= @order.reserve_number %></td>
              </tr>
              <tr>
                <th>予約日</th>
                <td colspan=3><%= @order.updated_at.strftime("%Y年%m月%d日") %></td>
              </tr>
              <tr>
                <th>受取希望日時</th>
                <td colspan=3><%= @order.takeaway_datetime.strftime("%Y年%m月%d日 %H:%M") %></td>
              </tr>
              <tr>
                <th>要望</th>
                <td><%= @order.requested %></td>
              </tr>
            </tbody>
          </table>
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>注文商品</th>
                <td>商品名</td>
                <td>数量</td>
              </tr>
              <% @order.order_items.each do |item| %>
                <tr>
                  <th></th>
                  <td><%= item.menu_name %></td>
                  <td><%= item.menu_amount %>個</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>