<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h4 class="center">『<%= @shop.name %>』<br>画像編集</h4>
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", shop_shop_images_path(@shop), class: "font-20" %>
        </div>
        <hr>
        <%= form_for @shop_image, url: shop_shop_image_path(@shop, @shop_image), method: :patch do |f|  %>
          <%= render partial: "shop_images/form", locals:{f:f, shop_image: @shop_image, img: @shop_image.file_name.url, btn: "編集"} %>
        <% end %>

      </div>
    </div>
  </div>
</div>