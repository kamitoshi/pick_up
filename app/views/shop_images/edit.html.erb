<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="form_box">
        <h3 class="center">店舗イメージ画像編集</h3>
        <hr>
        <%= form_for @shop_image, url: shop_shop_image_path(@shop, @shop_image), method: :patch do |f|  %>

          <div class="field">
            <%= image_tag @shop_image.file_name.url, width:"80%" %>
            <%= f.file_field :file_name %>
          </div>

          <div class="actions center">
            <%= f.submit "編集", class: "button-fill" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>