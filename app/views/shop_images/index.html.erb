<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="content_box">
        <h4 class="center">『<%= @shop.name %>』<br>画像一覧</h4>
        <div class="back_btn right">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "topに戻る", shop_path(@shop), class: "font-20" %>
        </div>
        <hr>
        <% if @shop_images.present? %>
          <% 4.times do |i| %>
            <div class="content_box_detail ribon">
              <% if @shop_images[i].present? %>
                <%= image_tag @shop_images[i].file_name.thumb_width.to_s %>
                <% if @shop_images[i].is_main? %>
                  <div class="caption"><span>メイン</span></div>
                <% end %>
                <div class="edit_btn ma-t-50">
                  <%= link_to "この画像を編集する", edit_shop_shop_image_path(@shop, @shop_images[i]), class: "btn btn-primary btn-sm" %>
                  <% unless @shop_images[i] == @main_image %>
                    <%= link_to "この画像を削除する", shop_shop_image_path(@shop, @shop_images[i]), method: :delete, class: "btn btn-danger btn-sm" %>
                  <% end %>
                </div>
              <% else %>
                <%= image_tag "noimage.png", class:"wid-100" %>
                <div class="add_btn ma-t-50">
                  <%= link_to "画像を追加する", new_shop_shop_image_path(@shop), class: "btn btn-primary btn-sm" %>
                </div>
              <% end %>
            </div>
            <hr>
          <% end %>
        <% else %>
          <% 4.times do |i| %>
            <div class="content_box_detail">
              <%= image_tag "noimage.png", class:"wid-100" %>
              <div class="add_btn ma-t-50">
                <%= link_to "画像を追加する", new_shop_shop_image_path(@shop), class: "btn btn-primary btn-sm" %>
              </div>
            </div>
            <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>