<div class="container-fluid background">
  <div class="row">
    <div class="col-lg-12">
      <div class="form_box">
        <h3 class="center">店舗イメージ画像追加</h3>
        <hr>
        <%= form_for @shop_image, url: shop_shop_images_path(current_shop) do |f|  %>
          <%= f.hidden_field :shop_id, value: current_shop.id %>
          <div class="field">
            <%= f.file_field :file_name %>
          </div>

          <div class="actions center">
            <%= f.submit "追加", class: "button-fill"%>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
    // disable auto discover
    Dropzone.autoDiscover = false;

    $(".dropzone").dropzone({
      maxFilesize: 1,
      addRemoveLinks: true
    });
  });
</script>