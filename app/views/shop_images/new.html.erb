<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h5>『<%= @shop.name %>』の画像追加</h5>
        <div class="back_btn right">
          <%= link_to "画像一覧に戻る", shop_shop_images_path(@shop), class: "arrow2" %>
        </div>
        <hr>
        <%= form_for @shop_image, url: shop_shop_images_path(@shop) do |f|  %>
          <%= render partial: "shop_images/form", locals:{f:f, shop_image: @shop_image, img: "noimage.png", btn: "追加する"} %>
        <% end %>

      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
    // disable auto discover
    Dropzone.autoDiscover = false;

    $(".dropzone").dropzone({
      maxFilesize: 1,
      addRemoveLinks: true
    });
  });
</script>