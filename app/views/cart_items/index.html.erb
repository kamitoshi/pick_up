<div class="container-fluid background">
  <div class="row">
    <div class="col-12">
      <div class="width_box">
        <h3 class="center">カート一覧</h3>
        <hr>
        <div class="content_box_detail">
          <table class="table">
            <thead>
              <tr>
                <th>商品名</th>
                <th>価格</th>
                <th>数量</th>
                <th>販売店舗</th>
                <th width="20%"></th>
              </tr>
            </thead>
            <tbody>
              <% if @cart_items.present? %>
                <% @cart_items.each do |cart_item| %>
                  <tr>
                    <td><%= cart_item.menu.name %></td>
                    <td>¥<%= cart_item.menu.price %></td>
                    <td><%= cart_item.amount %></td>
                    <td><%= cart_item.menu.shop.name %></td>
                    <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td>
                    カートに商品がありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <hr>
        <div class="row">
          <div class="col-3 offset-3">
            <div class="back_btn center">
              <%= link_to "買い物を続ける", menus_path, class:"btn btn-outline-success" %>
            </div>
          </div>
          <div class="col-3">
            <div class="go_btn center">
              <%= link_to "注文送信に進む", new_cart_items_order_path, class:"btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>