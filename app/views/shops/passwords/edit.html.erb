<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h4 class="center">パスワードを新しく設定</h4>
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", :back, class: "font-20" %>
        </div>
        <hr>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shops/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-under", placeholder: "#{@minimum_password_length}文字以上" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード確認" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-under" %>
          </div>

          <div class="actions">
            <%= f.submit "パスワードを変更する" %>
          </div>

        <% end %>
      </div>     
    </div>
  </div>
</div>