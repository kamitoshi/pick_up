<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <div class="content_box">
        <h4 class="center">登録メニュー一覧</h4>
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "topに戻る", shop_path(current_shop), class: "font-20" %>
        </div>
        <div class="content_box_detail">

          <table class="table table-hover">
            <thead>
              <tr>
                <th>商品名</th>
                <th>価格</th>
              </tr>
            </thead>
            <tbody>
              <% if @menus.present? %>
                <% if @food_menus.present? %>
                  <tr class="table-active">
                    <th colspan = 3>フードメニュー</th>
                  </tr>
                  <% @food_menus.each do |menu| %>
                    <tr class="pointer" data-href="<%= shops_menu_path(menu) %>">
                      <td><%= menu.name %></td>
                      <td>¥<%= price(menu.price) %></td>
                    </tr>
                  <% end %>
                <% end %>
                <% if @drink_menus.present? %>
                  <tr class="table-active">
                    <th colspan = 3>ドリンクメニュー</th>
                  </tr>
                  <% @drink_menus.each do |menu| %>
                    <tr class="pointer" data-href="<%= shops_menu_path(menu) %>">
                      <td><%= menu.name %></td>
                      <td>¥<%= price(menu.price) %></td>
                    </tr>
                  <% end %>
                <% end %>
                <% if @dessert_menus.present? %>
                  <tr class="table-active">
                    <th colspan = 3>デザートメニュー</th>
                  </tr>
                  <% @dessert_menus.each do |menu| %>
                    <tr class="pointer" data-href="<%= shops_menu_path(menu) %>">
                      <td><%= menu.name %></td>
                      <td>¥<%= price(menu.price) %></td>
                    </tr>
                  <% end %>
                <% end %>
              <% else %>
                <tr>
                  <td collspan=3>
                    登録されたメニューがありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>

    </div>
  </div>
</div>
<script>
jQuery(function ($) {
  //data-hrefの属性を持つtrを選択しclassにclickableを付加
  $("tr[data-href]")
    .addClass("clickable")

  //クリックイベント
  .click(function (e) {
    //e.targetはクリックした要素自体、それがa要素以外であれば
    if (!$(e.target).is("a")) {
      //その要素の先祖要素で一番近いtrの
      //data-href属性の値に書かれているURLに遷移する
      window.location = $(e.target).closest("tr").data("href");
    }
  });
});
</script>