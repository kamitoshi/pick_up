<div class="container-fluid" style="background-color:#eee">
  <div class="row">
    <div class="col-12">
      <div class="width_box">
        <h5>メニュー一覧</h5>
        <div class="content_box_detail">
          <div class="new_btn right ma-b-20">
            <%= link_to "メニュー追加", new_menu_path, class: "btn btn-primary" %>
          </div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>商品名</th>
                <th>価格</th>
                <th>手数料</th>
                <th>販売</th>
              </tr>
            </thead>
            <tbody>
              <% if @menus.present? %>
                <% @menus.each do |menu| %>
                  <tr class="pointer" data-href="<%= shops_menu_path(menu) %>">
                    <td><%= menu.name %></td>
                    <td>¥<%= menu.price %></td>
                    <td><%= menu.fee %>%</td>
                    <td>
                      <% if menu.is_active? %>
                        販売中
                      <% else %>
                        <span class="red">販売停止中</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td>
                    登録されたメニューがありません
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>