<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="content_box">
        <h5>登録店舗一覧</h5>
        <div class="content_box_detail">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>店舗名</th>
                <th>店舗住所</th>
              </tr>
            </thead>
            <tbody>
              <% if @shops.present? %>
                <% @shops.each do |shop| %>
                  <tr class="pointer" data-href="<%= shop_path(shop) %>">
                    <td><%= shop.id %></td>
                    <td><%= shop.name %></td>
                    <td><%= shop.full_address %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan=4>
                    登録店舗がありません。
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>