<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h4 class="center">店舗様ログイン</h4>
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", :back, class: "font-20" %>
        </div>
        <hr>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-under", placeholder: "入力してください" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"form-under", placeholder: "入力してください" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "パスワードを保存する" %>
            </div>
          <% end %>

          <div class="actions center">
            <%= f.submit "ログイン", class: "button-fill" %>
          </div>
        <% end %>

        <div class="link_box ma-t-30">
          <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), class: "font-10 ma-y-10" %><br />
        </div>

      </div>

    </div>
  </div>
</div>
