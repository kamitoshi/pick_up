<table class="table table-hover">
  <thead>
    <tr>
      <th>店舗名</th>
      <th>店舗住所</th>
      <th width="10%"></th>
      <th width="10%"></th>
    </tr>
  </thead>
  <tbody>
    <% if @shops.present? %>
      <% @shops.each do |shop| %>
        <tr class="pointer" data-href="<%= admins_shop_path(shop) %>">
          <td><%= shop.name %></td>
          <td><%= shop.full_address %></td>
          <td><%= link_to "編集", edit_admins_shop_path(shop) %></td>
          <td><%= link_to "削除", admins_shop_path(shop), method: :delete %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>
          登録されたメニューがありません
        </td>
      </tr>
    <% end %>
  </tbody>
</table>