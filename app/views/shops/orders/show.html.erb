<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="content_box">
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", :back, class: "font-20" %>
        </div>
      </div>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>
        注文番号
        <% if @order.status == "受付注文" %>
          <span class="ma-l-20"><%= @order.reserve_number %></span>
        <% else %>
          <span class="ma-l-20">＊＊＊＊＊＊＊＊＊＊</span>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="content_box">
        <div class="content_box_title">
          <h5>注文者情報</h5>
        </div>
        <div class="content_box_detail">
          <table class="table table-borderless table-sm">
            <thead>
              <tr>
                <th>注文者氏名</th>
                <td><%= @order.user.full_name %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= @order.user.phone_number %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @order.user.email %></td>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="content_box">
        <div class="content_box_detail">
          <table class="table table-striped table-sm">
            <tbody>
              <tr>
                <td>商品名</td>
                <td>数量</td>
                <td>金額</td>
              </tr>
              <% @order.order_items.each do |item| %>
                <tr>
                  <td><%= item.menu_name %></td>
                  <td><%= item.menu_amount %></td>
                  <td>¥<%= price(item.menu_price * item.menu_amount) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <h5 class="ma-10">希望時間：<span class="ma-l-20"><%= @order.takeaway_datetime.strftime("%Y年%m月%d日 %H:%M") %></span></h5>
      <h5 class="ma-10">合計金額：<span class="ma-l-20">¥<%= price(@order.total_payment) %></span></h5>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <div class="content_box">
        <div class="content_box_detail">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>要望</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <% if @order.requested.present?%>
                    <%= @order.requested %>
                  <% else %>
                    要望はありません
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% if @order.status == "新規注文" %>
    <div class="row ma-y-50">
      <div class="col-6">
      <%= link_to shops_order_path(status: 1), method: :patch, data: { confirm: '注文を受け付けてよろしいですか?' }, class: "rece-btn" do %>
        <div class="reception_btn">
          <%= link_to "注文を受付", shops_order_path(status: 1), method: :patch, data: { confirm: '注文を受け付けてよろしいですか?' }, class: "rece-btn" %>
        </div>
      <% end %>
      </div>
      <div class="col-6">
        <div class="cancel_btn">
          <%= link_to "注文を断る", shops_order_path(status: 3), method: :patch, data: { confirm: '注文を断ってもよろしいですか?' }, class: "cancel-btn" %>
        </div>
      </div>
    </div>
  <% end %>
</div>