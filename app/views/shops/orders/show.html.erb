<div class="container-fluid" style="background-color:#eee">
  <div class="row">
    <div class="col-12">
      <div class="width_box">
        <h5>注文履歴詳細</h5>
        <hr>
        <div class="content_box_detail">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>注文者</th>
                <td colspan=3><%= @order.user.full_name %></td>
              </tr>
              <tr>
                <th>予約番号</th>
                <td colspan=3><%= @order.reserve_number %></td>
              </tr>
              <tr>
                <th>予約日</th>
                <td colspan=3><%= @order.updated_at.strftime("%Y年%m月%d日") %></td>
              </tr>
              <tr>
                <th>受取希望日時</th>
                <td colspan=3><%= @order.takeaway_datetime.strftime("%Y年%m月%d日 %H:%M") %></td>
              </tr>
              <tr>
                <th>要望</th>
                <td><%= @order.requested %></td>
              </tr>
            </thead>
          </table>
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>注文商品</th>
                <td>商品名</td>
                <td>数量</td>
              </tr>
              <% @order.order_items.each do |item| %>
                <tr>
                  <th></th>
                  <td><%= item.menu_name %></td>
                  <td><%= item.menu_amount %>個</td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <hr>
        </div>
        
        <div class="return_btn center">
          <%= link_to "一覧へ戻る", shops_orders_path, class: "btn btn-success" %>
          <%= link_to "本日の一覧へ戻る", today_index_shops_orders_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>