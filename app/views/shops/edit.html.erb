<div class="container">
  <div class="row">
    <div class="col-8">
      <%= form_for @shop do |f| %>
        <div class="field">
          <%= f.label :store_name, "店名" %><br>
          <%= f.text_field :store_name, autofocus: true, autocomplete: "store_name", class:"form-control", placeholder: "店名" %>
        </div>

        <div class="field">
          <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br />
          <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control", placeholder: "例:08012345678" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br />
          <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control", placeholder: "例:1610001" %>
        </div>

        <div class="field">
          <%= f.label :prefecture, "都道府県" %><br>
          <%= f.select :prefecture, Shop.prefectures.keys, {prompt: '選択してください'}, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control", placeholder: "例:新宿区三丁目" %>
        </div>

        <div class="field">
          <%= f.label :introduction, "店紹介文" %><br />
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :url, "ホームページURL" %><br>
          <%= f.text_field :url, autofocus: true, autocomplete: "url", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "編集" %>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <div class="shop_edit-sidebar wid-70 ma-a">
        <%= link_to "パスワード変更", edit_shop_registration_path, class:"btn btn-primary wid-100 ma-y-10" %>
        <%= link_to "退会する", shop_path(current_shop), method: :delete, class:"btn btn-danger wid-100 ma-y-10" %>
      </div>
    </div>
  </div>
</div>

