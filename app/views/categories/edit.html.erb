<div class="container-fluid" style="background-color:#eee">
  <div class="row">
    <div class="col-12" style="padding:0">
      <div class="width_box">
        <h5>カテゴリーを追加する</h5>
        <div class="content_box_detail">
          <%= form_for @category do |f| %>
            <div class="field">
              <%= f.label :name, "カテゴリー名", class:"label" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder: "パスタ" %>
            </div>
            <div class="actions wid-30 ma-l pa-y-30">
              <%= f.submit "追加する", class:"btn btn-primary wid-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12" style="padding:0">
      <div class="width_box">
        <h5>カテゴリー一覧</h5>
        <div class="content_box_detail">
          <table class="table">
            <tbody>
              <% @categories.each do |category| %>
                <% if category == @target_category %>
                  <tr>
                    <%= form_for @target_category do |f| %>
                      <td width="80%">
                        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", value: category.name %>
                      </td>
                      <td width="20%">
                        <%= f.submit "編集する", class:"btn btn-primary wid-100" %>
                      </td>
                    <% end %>
                  </tr>
                <% else %>
                  <tr>
                    <td colspan="2">
                      <%= category.name %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>