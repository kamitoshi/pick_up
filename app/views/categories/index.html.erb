<div class="container-fluid" style="background-color:#eee">
  <div class="row">
    <div class="col-12" style="padding:0">
      <div class="width_box">
        <h5>カテゴリーを追加する</h5>
        <div class="content_box_detail">
          <%= form_for @category do |f| %>
            <div class="field">
              <%= f.label :name, "カテゴリー名", class:"label" %>
              <%= f.text_field :name, autofocus: false, autocomplete: "name", class:"form-control", placeholder: "パスタ" %>
            </div>

            <div class="actions wid-30 ma-l pa-y-30">
              <%= f.submit "追加する", class:"btn btn-primary wid-100" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12" style="padding:0">
      <div class="width_box">
        <h5>カテゴリー一覧</h5>
        <div class="content_box_detail">
          <table class="table">
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td width="80%"><%= category.name %></td>
                  <td width="10%"><%= link_to "編集", edit_category_path(category), class: "btn btn-outline-primary" %></td>
                  <td width="10%"><%= link_to "削除", category_path(category), method: :delete, class: "btn btn-danger" %></td>
                </tr>
              <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
