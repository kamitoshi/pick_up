<!-- メイン画像 -->
<div id="mainBanner" class="mainImg">
  <% if @shop.shop_images.present? %>
    <div class="shopImage" style="background-image:url(<%= @shop.main_image.file_name.to_s %>);" alt="店舗画像"></div>
  <% else %>
    <span class="shopImage" style="background-image:url(<%= asset_path('shops_img.jpg') %>);" alt="店舗画像"></span>
  <% end %>
  <div id="shopImage"></div>
  <div id="shopInfo">
    <h3 class="center ma-t-50"><%= @shop.name %></h3>
    <h6 class="center ma-t-10" style="color: #ddd">
      <% if @shop.shop_tags.present? %>
        <% @shop.shop_tags.each do |tag| %>
          <span class="ma-10"><%= tag.content %></span>
        <% end %>
      <% end %>
    </h6>
  </div>
</div>
<!-- / メイン画像 -->

<!-- サーチバー  -->
<div class="menu_bar center">
<ul id="myTab" class="nav nav-tabs" role="tablist" style="display:block">
  <li class="dis-ib ma-x-10" role="presentation"><a href="#infomation" id="infomation-tab" role="tab" data-toggle="tab" aria-controls="infomation" aria-selected="true"><%= @shop.name %></a></li>
  <li class="dis-ib ma-x-10" role="presentation"><a href="#food" id="food-tab" role="tab" data-toggle="tab" aria-controls="food" aria-selected="false">フード</a></li>
  <li class="dis-ib ma-x-10" role="presentation"><a href="#drink" id="drink-tab" role="tab" data-toggle="tab" aria-controls="drink" aria-selected="false">ドリンク</a></li>
  <li class="dis-ib ma-x-10" role="presentation"><a href="#dessert" id="dessert-tab" role="tab" data-toggle="tab" aria-controls="dessert" aria-selected="false">デザート</a></li>
</ul>
</div>
<!-- / サーチバー  -->

<div class="container-fluid">
  <div class="row right ma-b-20">
    <div class="col-md-12">
      <%= link_to "戻る", :back, class: "arrow2" %>
    </div>
  </div>
  <div id="myTabContent" class="tab-content mt-3">
    <div id="infomation" class="tab-pane active" role="tabpanel" aria-labelledby="infomation-tab">
      <div class="row ma-b-30">
        <div class="col-md-12">
          <div class="gridWrapperTitle">
            <h6>人気メニュー</h6>
          </div>
          <% if @menus.present? %>
            <%= render partial: "menus/recommend_menus", locals:{menus: @popular_menus} %>
          <% else %>
            <h6 class="center">登録メニューがありません</h6>
          <% end %>
        </div>
      </div>
      <div class="row ma-b-30">
        <div class="col-md-12">
          <h6>店舗情報</h6>
          <table class="table">
            <tbody>
              <tr>
                <th>店舗名</th>
                <td><%= @shop.name %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><a href="tel:<%= @shop.phone_number %>" class="blue"><%= @shop.phone_number %></a></td>
              </tr>
              <tr>
                <th>住所</th>
                <td>〒<%= @shop.postal_code %><br><%= @shop.full_address %></td>
              </tr>
              <tr>
                <th>公式HP</th>
                <td><%= link_to @shop.url, @shop.url, class: "blue" if @shop.url.present? %></td>
              </tr>
              <tr>
                <th>お店紹介</th>
                <td><%= introduction(@shop.introduction) %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div id="food" class="tab-pane" role="tabpanel" aria-labelledby="food-tab">
      <div class="row ma-b-30">
        <div class="col-md-12">
          <div class="gridWrapperTitle">
            <h6>フード</h6>
          </div>
          <% if @food_menus.present? %>
            <%= render partial: "menus/menus", locals:{menus: @food_menus} %>
          <% else %>
            <h6 class="center">登録メニューがありません</h6>
          <% end %>
        </div>
      </div>
    </div>
    <div id="drink" class="tab-pane" role="tabpanel" aria-labelledby="drink-tab">
      <div class="row ma-b-30">
        <div class="col-md-12">
          <div class="gridWrapperTitle">
            <h6>ドリンク</h6>
          </div>
          <% if @drink_menus.present? %>
            <%= render partial: "menus/menus", locals:{menus: @drink_menus} %>
          <% else %>
            <h6 class="center">登録メニューがありません</h6>
          <% end %>
        </div>
      </div>
    </div>
    <div id="dessert" class="tab-pane" role="tabpanel" aria-labelledby="dessert-tab">
      <div class="row ma-b-30">
        <div class="col-md-12">
          <div class="gridWrapperTitle">
            <h6>デザート</h6>
          </div>
          <% if @dessert_menus.present? %>
            <%= render partial: "menus/menus", locals:{menus: @dessert_menus} %>
          <% else %>
            <h6 class="center">登録メニューがありません</h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>