<!-- メイン画像 -->
<div id="mainBanner" class="mainImg">
  <% if @shop.shop_images.present? %>
    <span class="shopImage" style="background-image:url(<%= @shop.main_image.file_name.to_s %>);" alt="店舗画像"></span>
  <% else %>
    <span class="shopImage" style="background-image:url(<%= asset_path('shops_img.jpg') %>);" alt="店舗画像"></span>
  <% end %>
  <div id="shopImage"></div>
  <div id="shopInfo">
    <h3 class="center"><%= @shop.name %></h3>
    </p>
  </div>
</div>
<!-- / メイン画像 -->

<!-- サーチバー  -->
<div class="menu_bar center">
  <li class="dis-ib pa-x-10"><a href="#">人気メニュー</a></li>
  <li class="dis-ib pa-x-10"><a href="#">フード</a></li>
  <li class="dis-ib pa-x-10"><a href="#">ドリンク</a></li>
  <li class="dis-ib pa-x-10"><a href="#">デザート</a></li>
</div>
<!-- / サーチバー  -->

<div class="container-fluid">
  <div class="row right ma-b-20">
    <div class="col-md-12">
      <%= link_to "戻る", :back, class: "arrow2" %>
    </div>
  </div>
  <% if @food_menus.present? %>
    <div class="gridWrapperTitle">
      <h6>フード</h6>
    </div>
    <div class="row row-cols-2 row-cols-lg-3 row-cols-md-2">
      <% @food_menus.each do |menu| %>
        <div class="col mb-4">
          <div class="card scale-box" data-toggle="modal" data-target="#modal<%= menu.id %>">
            <% if menu.menu_images.present? %>
              <%= image_tag menu.main_image.file_name.thumb_width.to_s, class:"scale-img wid-100" %>
            <% else %>
              <%= image_tag "noimage.png", class: "wid-100" %>
            <% end %>
            <div class="card-body">
              <p class="c-title" ><%= menu.name %></p>
              <p class="c-title right">
                ¥<%= price(menu.price) %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="non_menu center">
      <h4>登録された商品がありません</h4>
    </div>
  <% end %>
  
  <% if @drink_menus.present? %>
    <div class="gridWrapperTitle">
      <h6>ドリンク</h6>
    </div>
    <div class="row row-cols-2 row-cols-lg-3 row-cols-md-2">
      <% @drink_menus.each do |menu| %>
        <div class="col mb-4">
          <div class="card scale-box" data-toggle="modal" data-target="#modal<%= menu.id %>">
            <% if menu.menu_images.present? %>
              <%= image_tag menu.main_image.file_name.thumb_width.to_s, class:"scale-img wid-100" %>
            <% else %>
              <%= image_tag "noimage.png", class: "wid-100" %>
            <% end %>
            <div class="card-body">
              <p class="c-title" ><%= menu.name %></p>
              <p class="c-title right">
                ¥<%= price(menu.price) %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @dessert_menus.present? %>
    <div class="gridWrapperTitle">
      <h6>デザート</h6>
    </div>
    <div class="row row-cols-2 row-cols-lg-3 row-cols-md-2">
      <% @dessert_menus.each do |menu| %>
        <div class="col mb-4">
          <div class="card scale-box" data-toggle="modal" data-target="#modal<%= menu.id %>">
            <% if menu.menu_images.present? %>
              <%= image_tag menu.main_image.file_name.thumb_width.to_s, class:"scale-img wid-100" %>
            <% else %>
              <%= image_tag "noimage.png", class: "wid-100" %>
            <% end %>
            <div class="card-body">
              <p class="c-title" ><%= menu.name %></p>
              <p class="c-title right">
                ¥<%= price(menu.price) %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @food_menus.present? %>
    <% @food_menus.each do |menu| %>
      <%= render partial: "menus/modal", locals: {menu: menu} %>
    <% end %>
  <% end %>
  <% if @drink_menus.present? %>
    <% @drink_menus.each do |menu| %>
      <%= render partial: "menus/modal", locals: {menu: menu} %>
    <% end %>
  <% end %>
  <% if @dessert_menus.present? %>
    <% @dessert_menus.each do |menu| %>
      <%= render partial: "menus/modal", locals: {menu: menu} %>
    <% end %>
  <% end %>
</div>