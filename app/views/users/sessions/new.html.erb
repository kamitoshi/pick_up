<div class="container-fluid head-pad">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h2 class="center">ログイン</h2>
        <hr>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "入力してください", class:"form-under" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "入力してください", class:"form-under" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "パスワードを保存" %>
            </div>
          <% end %>

          <div class="actions center">
            <%= f.submit "ログイン", class: "button-fill" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
        
    </div>
  </div>
</div>