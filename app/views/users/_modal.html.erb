<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog global_menu_modal">
          <div class="modal-content container">
            <div class="modal-body">
              <div class="modal_title">
                <h4>登録情報</h4>
              </div>
              <table class="table">
                <tbody>
                  <tr>
                    <th>氏名</th>
                    <td><%= current_user.full_name %></td>
                  </tr>
                  <tr>
                    <th>電話番号</th>
                    <td><%= current_user.phone_number %></td>
                  </tr>
                  <tr>
                    <th>メールアドレス</th>
                    <td><%= current_user.email %></td>
                  </tr>
                  <tr class="right">
                    <td colspan=2>
                      <%= link_to "編集", edit_user_path(current_user), class: "btn btn-primary btn-sm" %>
                      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-danger btn-sm" %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
    </div>
  </div>
</div>