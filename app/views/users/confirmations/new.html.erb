<div class="container-fluid background">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="form_box">
        <h3 class="center">本人確認メールの再送信</h3>
        <hr>
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "本人確認メールを受け取るメールアドレスを入力", class: "form-under", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>

          <div class="actions center">
            <%= f.submit "メールを再送信する", class: "button-fill" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>     
    </div>
  </div>
</div>