<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h4 class="center">『<%= @menu.name %>』<br>画像編集</h4>
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", menu_menu_images_path(@menu), class: "font-20" %>
        </div>
        <hr>
        <%= form_for @menu_image, url: menu_menu_image_path(@menu, @menu_image), method: :patch do |f|  %>
          <%= render partial: "menu_images/form", locals:{f:f, menu_image: @menu_image, img: @menu_image.file_name.url, btn: "編集"} %>
        <% end %>
      </div>
    </div>
  </div>
</div>