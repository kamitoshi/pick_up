<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="form_box">
        <h4 class="center">『<%= @menu.name %>』<br>画像追加</h4>
        <div class="back_btn right">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", menu_menu_images_path(@menu), class: "font-20" %>
        </div>
        <hr>
        <%= form_for @menu_image, url: menu_menu_images_path(@menu) do |f|  %>
          <%= render partial: "menu_images/form", locals:{f:f, menu_image: @menu_image, img: "noimage.png", btn: "追加する"} %>
        <% end %>

      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
    // disable auto discover
    Dropzone.autoDiscover = false;

    $(".dropzone").dropzone({
      maxFilesize: 1,
      addRemoveLinks: true
    });
  });
</script>