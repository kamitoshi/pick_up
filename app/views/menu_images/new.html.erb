<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="form_box">
        <h3 class="center">商品画像の追加</h3>
        <hr>
        <%= form_for @menu_image, url: menu_menu_images_path(@menu.id) do |f|  %>
          <%= f.hidden_field :menu_id, value: @menu.id %>
          <div class="field">
            <%= f.file_field :file_name %>
          </div>

          <div class="actions center">
            <%= f.submit "追加する", class: "button-fill" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
<script>
  $(function() {
    // disable auto discover
    Dropzone.autoDiscover = false;

    $(".dropzone").dropzone({
      maxFilesize: 1,
      addRemoveLinks: true
    });
  });
</script>