<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="width_box">
        <h3 class="center">『<%= @menu.name %>』の画像一覧</h3>
        <hr>
        <% if @menu.menu_images.present? %>
          <% 4.times do |i| %>
            <div class="content_box_detail">
              <% if @menu.menu_images[i].present? %>
                <%= image_tag @menu.menu_images[i].file_name.thumb_width.to_s %>
                <div class="edit_btn ma-t-50">
                  <%= link_to "この画像を編集する", edit_menu_menu_image_path(@menu, @menu.menu_images[i]), class: "btn btn-primary" %>
                  <%= link_to "この画像を削除する", menu_menu_image_path(@menu, @menu.menu_images[i]), method: :delete, class: "btn btn-danger" %>
                </div>
              <% else %>
                <%= image_tag "noimage.png" %>
                <div class="add_btn ma-t-50">
                  <%= link_to "画像を追加する", new_menu_menu_image_path(@menu), class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
            <hr>
          <% end %>
        <% else %>
          <% 4.times do |i| %>
            <div class="content_box_detail">
              <%= image_tag "noimage.png" %>
              <div class="add_btn ma-t-50">
                <%= link_to "画像を追加する", new_menu_menu_image_path(@menu), class: "btn btn-primary" %>
              </div>
            </div>
            <hr>
          <% end %>
        <% end %>
        <div class="back_btn center">
          <%= link_to "戻る", shops_menu_path(@menu), class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
  </div>
</div>