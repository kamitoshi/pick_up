<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="form_box">
        <h4 class="center">店舗検索キーワード追加</h4>
        <div class="back_btn">
          <i class="fas fa-angle-left fa-lg"></i><%= link_to "戻る", shop_path(@shop), class: "font-20" %>
        </div>
        <hr>
        <%= form_for @shop_tag, url: shop_shop_tags_path(@shop) do |f|  %>
          <%= f.hidden_field :shop_id, value: @shop.id %>
          <div class="field">
            <%= f.text_field :content, class: "form-control", placeholder: "追加したいキーワードを入力" %>
          </div>

          <div class="actions center">
            <%= f.submit "追加", class: "button-fill" %>
          </div>
        <% end %>
        <hr>
        <h5>登録済み検索キーワード</h5>
        <% if @shop.shop_tags.present? %>
          <div class="shop_tag-box">
            <% @shop.shop_tags.each do |tag| %>
              <span class="badge badge-pill badge-secondary"><%= tag.content %><span class="ma-l-10">|</span><%= link_to "x", shop_shop_tag_path(@shop, tag), method: :delete, class:"badge badge-pill badge-secondary" %></span>
            <% end %>
          </div>
        <% else %>
          <div class="shop_tag-box center">
            <p>キーワードが登録されていません</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>