<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="form_box">
        <h3 class="center">店舗検索キーワード編集</h3>
        <hr>
        <%= form_for @shop_tag, url: shop_shop_tag_path(current_shop, @shop_tag) do |f|  %>

          <div class="field">
            <%= f.text_field :content, class: "form-control", placeholder: "検索されたいキーワードを入力" %>
          </div>

          <div class="actions center">
            <%= f.submit "編集", class: "button-fill" %>
          </div>
        <% end %>
        <div class="destroy_btn center ma-t-30">
          <%= link_to "削除", shop_shop_tag_path(current_shop, @shop_tag), method: :delete, class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>